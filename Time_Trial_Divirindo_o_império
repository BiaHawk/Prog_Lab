
cidades = int(input())
grafo = {i:[] for i in range(1, cidades+1)} #criação do grafo em dic, para ter melhor acesso dos vizinhos
for i in range(cidades-1):
    u, v = map(int, input().split())
    grafo[v].append(u)
    grafo[u].append(v)

    

